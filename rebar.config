{erl_opts, [
	fail_on_warning,
	bin_opt_info,
	debug_info
]}.

{clean_files, [
	"*.eunit",
	"ebin/*.beam",
	"doc/*.html", "doc/*.edoc-info", "doc/*.css", "doc/*.png",
	"test/ct/logs/*", "test/ct/*.beam"
]}.

{deps, [
	{uuid, ".*", {git, "git://github.com/avtobiff/erlang-uuid.git", "master"}},
	{dh_date, ".*", {git, "https://github.com/daleharvey/dh_date.git"}},
	{meck, ".*", {git, "https://github.com/eproxus/meck.git"}}
]}.

{deps_dir, "deps"}.


{cover_enabled, true}.

{eunit_opts, [
	verbose,
	{report, {
		eunit_surefire,
		[{dir, "."}]
	}}
]}.

{eunit_compile_opts, [
	export_all
]}.


{ct_dir, "test/ct"}.
{ct_log_dir, "test/ct/logs"}.
{ct_extra_params, "-args_file test/ct/config/node.args -pa test/ct"}.
{ct_use_short_names, true}.
